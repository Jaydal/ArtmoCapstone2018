@model ArtmoWeb.WebApplication.Models.ArtmoModels

<div id="post">
    <form class="form-horizontal">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label>Marker</label>
                        <div>
                            @{
                                            string id = (Model.Marker<10) ? "0" + Model.Marker.ToString() : Convert.ToString(Model.Marker) ;
                                            string src = "/_Markers/" + id + ".jpg";
                             }
                            <img src=@src class="img-thumbnail" style="max-width:100px;" alt="Item Disabled" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NativeTerm)
                        <div>
                            @Html.DisplayFor(model => model.NativeTerm, null, new { @class = "alert-info" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EnglishTerm)
                        <div>
                            @Html.DisplayFor(model => model.EnglishTerm)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Donor)
                        <div>
                            @Html.DisplayFor(model => model.Donor)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DateAcquired)
                        <div>
                            @Html.DisplayFor(model => model.DateAcquired)
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <div>
                            <img src="@ViewBag.Image" id="img" class="img-thumbnail" alt="No image available" style="max-width:100px;max-height:100px;" />
                            <br />
                        </div>
                    </div>
                </div>
                <div class="col">

                    <div class="form-group">
                        @Html.LabelFor(model => model.EngDesc)
                        <div>
                            @Html.DisplayFor(model => model.EngDesc)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FilDesc)
                        <div>
                            @Html.DisplayFor(model => model.FilDesc)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.IlocoDesc)
                        <div>
                            @Html.DisplayFor(model => model.IlocoDesc)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @Ajax.ActionLink("Edit", "AddEdit", new { id = Model.Id }, new AjaxOptions()
                                {
                                    HttpMethod = "GET",
                     InsertionMode = InsertionMode.Replace,
                     UpdateTargetId = "post"
                 },  new { @class = "btn btn-dark btn-block", data_target = "#myInput" })
</div>


@Scripts.Render("~/bundles/jquery")
